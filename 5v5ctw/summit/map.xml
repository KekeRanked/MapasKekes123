<map proto="1.4.2">
<name>Summit</name>
<version>1.4.3</version>
<objective>Capture the enemy's wool.</objective>
<time result="objectives" overtime="10m">25m</time>
<authors>
    <author uuid="b8add1ba-8e13-4673-bc73-4e3ed524d40e"/> <!-- Blazy36 -->
</authors>
<broadcasts>
    <alert after="1s">Buckets are enabled!</alert>
</broadcasts>
<teams>
    <team id="blue-team" color="blue" max="5" max-overfill="5">Blue</team>
    <team id="red-team" color="dark red" max="5" max-overfill="5">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="iron sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="28" amount="40" material="arrow"/>
        <item slot="2" unbreakable="true" material="iron pickaxe">
            <enchantment>efficiency</enchantment>
        </item>
        <item slot="3" unbreakable="true" material="iron axe"/>
        <item slot="30" unbreakable="true" material="iron spade"/>
        <item slot="4" amount="64" damage="5" material="wood"/>
        <item slot="31" amount="64" damage="5" material="wood"/>
        <item slot="5" amount="64" material="glass"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" amount="64" material="golden carrot"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate">
            <enchantment>projectile_protection</enchantment>
        </chestplate>
        <effect amplifier="255" duration="5s">resistance</effect>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="180">
            <cuboid min="-88,34,96" max="-89,34,95"/>
        </region>
    </default>
    <spawn team="blue-team" kit="spawn-kit">
        <region yaw="-90">
            <cuboid min="-165,12,32.5" max="-164,12,34.5"/>
        </region>
    </spawn>
    <spawn team="red-team" kit="spawn-kit">
        <region yaw="90">
            <cuboid min="-12,12,34.5" max="-13,12,32.5"/>
        </region>
    </spawn>
</spawns>
<filters>
    <deny id="blue-in-wr">
        <any>
            <team id="only-red">red-team</team>
            <material>chest</material>
        </any>
    </deny>
    <deny id="red-in-wr">
        <any>
            <team id="only-blue">blue-team</team>
            <material>chest</material>
        </any>
    </deny>
    <all id="only-iron-regen">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
    <deny id="no-void">
        <void/>
    </deny>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="blue-spawn" min="-148,39" max="-168,28"/>
        <rectangle id="red-spawn" min="-29,39" max="-9,28"/>
    </union>
    <union id="wool-rooms">
        <rectangle id="orange-wr" min="-12,70" max="-1,81"/> <!-- Blue gets from red -->
        <rectangle id="purple-wr" min="-165,70" max="-176,81"/> <!-- Red gets from blue -->
    </union>
    <cuboid id="gapple-spawner-prot" min="-88,12,34" max="-89,14,35"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the opponent's spawn!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the opponent's spawn!"/>
    <apply enter="only-blue" region="orange-wr" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="purple-wr" message="You may not enter your own wool room!"/>
    <apply block-break="only-iron" block-place="only-iron-regen" region="spawns" message="You may only break iron blocks in spawn!"/>
    <apply block="blue-in-wr" use="only-blue" region="orange-wr"/>
    <apply block="red-in-wr" use="only-red" region="purple-wr"/>
    <apply block="never" region="gapple-spawner-prot" message="You may not destroy the spawner!"/>
    <apply block-place="no-void" message="You may not edit the void!"/>
</regions>
<renewables>
    <renewable region="spawns" renew-filter="only-iron"/>
</renewables>
<spawners>
    <spawner id="stone-gapple-spawner" delay="7s">
        <spawn-region>
            <block>-89,13,34</block>
        </spawn-region>
        <player-region>
            <cuboid min="-90,9,33" max="-87,17,36"/>
        </player-region>
        <item material="golden apple"/>
    </spawner>
</spawners>
<wools craftable="false" wool-proximity-metric="none" monument-proximity-metric="closest block">
    <wool team="blue-team" color="orange" location="-5.5,12,75.5">
        <monument>
            <block>-166.5,13,33.5</block>
        </monument>
    </wool>
    <wool team="red-team" color="purple" location="-171.5,12,75.5">
        <monument>
            <block>-10.5,13,33.5</block>
        </monument>
    </wool>
</wools>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>iron pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemremove>
    <item>wood</item>
    <item>glass</item>
    <item>golden carrot</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>string</item>
    <item>sapling</item>
    <item>31</item>
    <item>37</item>
    <item>38</item>
    <item>175</item>
    <item>338</item>
    <item>66</item>
    <item>flint</item>
    <item>snow</item>
    <item>snowball</item>
    <item>seeds</item>
</itemremove>
<itemkeep>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="32" damage="5" material="wood"/>
    <item amount="16" material="glass"/>
    <item amount="10" material="arrow"/>
</kill-reward>
<maxbuildheight>22</maxbuildheight>
<respawn delay="5s" auto="true"/>
<crafting>
    <disable>iron trapdoor</disable>
    <disable>boat</disable>
    <disable>minecart</disable>
</crafting>
<item-mods>
    <rule>
        <match>
            <material>iron chestplate</material>
        </match>
        <modify>
            <enchantment>projectile_protection</enchantment>
        </modify>
    </rule>
</item-mods>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
